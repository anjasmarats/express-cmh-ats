        // Fungsi untuk memproses dan memformat teks
        const formatText=(text) =>{
            // Membersihkan output container
            let result = '';
            
            // Memisahkan teks menjadi paragraf berdasarkan newline
            let paragraphs = text.split('\n');
            
            // Memproses setiap paragraf
            paragraphs.forEach(paragraph => {
                if (paragraph.trim() === '') {
                    // Jika paragraf kosong, tambahkan elemen dengan jarak saja
                    const emptyParagraph = document.createElement('p');
                    emptyParagraph.classList.add('output-paragraph');
                    emptyParagraph.style.height = '1em'; // Jarak untuk paragraf kosong
                    outputContainer.appendChild(emptyParagraph);
                    return;
                }
                
                // Membuat elemen paragraf baru
                const pElement = document.createElement('p');
                pElement.classList.add('output-paragraph');
                
                // Memproses format teks
                let formattedText = paragraph;
                
                // Memproses format tebal dengan ukuran berbeda berdasarkan jumlah *
                formattedText = formattedText.replace(/(\*+)(.*?)\1/g, (match, stars, content) => {
                    const starCount = stars.length;
                    // Menentukan class berdasarkan jumlah bintang
                    const sizeClass = starCount > 1 ? `size-${Math.min(starCount, 5)}` : '';
                    return `<span class="fw-bolder ${sizeClass}">${content}</span>`;
                });
                
                // Memproses format miring
                formattedText = formattedText.replace(/(_+)(.*?)\1/g, (match, underscores, content) => {
                    return `<span class="fst-italic">${content}</span>`;
                });
                
                // Memproses format coret
                formattedText = formattedText.replace(/(~+)(.*?)\1/g, (match, tildes, content) => {
                    return `<span class="text-decoration-line-through">${content}</span>`;
                });

                result+=formattedText
            });
            return result
        }
    </script>

