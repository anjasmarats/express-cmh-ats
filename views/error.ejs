    <script>
        // Handle search functionality
        function handleSearch(event) {
            event.preventDefault();
            const searchTerm = document.getElementById('searchInput').value.trim();
            
            if (searchTerm) {
                // Simulate search - in a real implementation, this would redirect to search results
                alert(`Pencarian untuk: "${searchTerm}"\n\nDalam implementasi lengkap, ini akan mengarahkan ke halaman hasil pencarian.`);
                // window.location.href = `search.html?q=${encodeURIComponent(searchTerm)}`;
            } else {
                alert('Silakan masukkan kata kunci pencarian.');
            }
        }
        
        // Add interactive elements
        document.addEventListener('DOMContentLoaded', function() {
            // Add typing effect to error message
            const errorMessage = document.querySelector('.error-message p');
            if (errorMessage) {
                const originalText = errorMessage.textContent;
                errorMessage.textContent = '';
                
                let i = 0;
                const typeWriter = () => {
                    if (i < originalText.length) {
                        errorMessage.textContent += originalText.charAt(i);
                        i++;
                        setTimeout(typeWriter, 30);
                    }
                };
                
                // Start typing effect after a short delay
                setTimeout(typeWriter, 1000);
            }
            
            // Add pulse animation to action buttons
            const actionButtons = document.querySelectorAll('.error-actions .btn');
            actionButtons.forEach((button, index) => {
                button.style.animationDelay = `${index * 0.2}s`;
                button.classList.add('animate__animated', 'animate__pulse');
            });
            
            // Add hover effects to link cards
            const linkCards = document.querySelectorAll('.error-link-card');
            linkCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-10px) scale(1.02)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });
            
            // Auto-focus on search input
            document.getElementById('searchInput').focus();
        });
        
        // Handle dark mode based on user preference
        const isDarkMode = localStorage.getItem('darkMode') === 'true';
        if (!isDarkMode) {
            document.body.classList.remove('dark-mode');
        }
    </script>
