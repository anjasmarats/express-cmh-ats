            <!-- Article Form -->
            <section class="form-container" id="articleForm">
                <h3 class="section-title">Tambah/Edit Artikel</h3>
                
                <form action="" method="post" id="articleFormData" enctype="multipart/form-data">
                    <input type="hidden" id="articleId">
                    
                    <div class="form-section">
                        <div class="form-group">
                            <label for="articleTitle" class="form-label">E-mail</label>
                            <input type="text" id="articleTitle" class="form-control" placeholder="Masukkan email...." required>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="form-group">
                            <label for="articleTitle" class="form-label">Password</label>
                            <input type="password" id="articleTitle" class="form-control" placeholder="Masukkan password...." required>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="d-flex justify-between align-center">
                            <div class="admin-actions">
                                <button type="button" class="btn btn-outline" id="saveDraftBtn">
                                    <i class="fas fa-save"></i> Simpan Draft
                                </button>
                                <button type="submit" class="btn btn-primary" id="publishArticleBtn">
                                    <i class="fas fa-paper-plane"></i> Publikasikan
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
