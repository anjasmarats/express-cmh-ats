<%- include("../navbar",{isLoggedIn}) %>

<div class="admin-container">
        <!-- Main Content -->
        <main class="admin-main">
            <br><br>

            <!-- Article Form -->
            <section class="form-container" id="articleForm">
                <h3 class="section-title">Edit Artikel</h3>
                
                <form action="" method="post" id="articleFormData" enctype="multipart/form-data">
                    <input type="hidden" id="articleId">
                    
                    <div class="form-section">
                        <div class="form-group">
                            <label for="articleTitle" class="form-label">Judul Artikel</label>
                            <input type="text" value="<%= article.title %>" id="articleTitle" class="form-control" name="title" placeholder="Masukkan judul artikel yang menarik..." required>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="form-group">
                            <label for="articleContent" class="form-label">Konten Artikel</label>
                            <textarea id="articleContent" name="description" class="form-control" rows="15" placeholder="Tulis konten artikel Anda di sini..."><%= article.description %></textarea>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="d-flex justify-between align-center">
                            <div class="admin-actions">
                                <button type="submit" class="btn btn-primary" id="publishArticleBtn">
                                    <i class="fas fa-paper-plane"></i> Publikasikan
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

